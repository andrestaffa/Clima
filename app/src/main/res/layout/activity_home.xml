<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3e75f1"
    android:layout_gravity="center_horizontal"
    android:theme="@style/Theme.Clima.NoActionBar"
    tools:context=".Main.HomeActivity">


    <ImageView
        android:id="@+id/searchImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/locationNameTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/search_icon"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/locationNameTextView"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:gravity="start"
        android:text="Calgary, Alberta"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:layout_below="@+id/locationNameTextView"
        android:layout_alignStart="@+id/locationNameTextView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="start"
        android:text="Sat, 28 May"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_light"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/tempTextView"
        android:layout_alignBottom="@+id/tempTextView"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:text="Today"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tempTextView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="25Â°"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="50sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/climateTextView"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/tempTextView"
        android:layout_alignStart="@+id/dayTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Sunny"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_light"
        android:textSize="15sp"
        android:textStyle="normal" />


</RelativeLayout>